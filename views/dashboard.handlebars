<section class="new-post">

    <button type="submit" class="btn" id="create-post">Create Post</button>

</section>

{{#if posts.length}}
<section>
    <h2>Dashboard</h2>

    <ul class="post-list">
        {{#each posts as |post|}}
            <li>
                {{> post-info post}}
                <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Post</a>
            </li>
        {{/each}}
    </ul>
</section>
{{/if}}

<script src="/public/createPost.js"></script>