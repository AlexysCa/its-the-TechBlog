<article class="post">
    <div class="entire-post">
        <div class="info-section">
            <div class="post-title">
                <a href="/post/{{id}}" class="links">{{title}}</a>
            </div>

            <div class="created-by">
                <p id="comment-title">
                    Posted by <b>{{user.username}} </b> on <b>{{theDate created_at}}</b>
                </p>
            </div>

            <div class="content-section">
                <p>{{content}}</p>
            </div>
        </div>
    </div>
</article>